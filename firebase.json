{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"],
    "source": "functions"
  },
  "hosting": [
    {
      "target": "develop",
      "public": "build-dev",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "target": "staging",
      "public": "build-staging",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "target": "production",
      "public": "build-production",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "public": "build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}
